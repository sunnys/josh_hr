                            <div id="bar-charts"></div>
                        </div>
                    </div>
                    <div class="col-md-6 text-center">
                        <div class="card-box">
                            <h3 class="card-title">State</h3>
                            <div id="pie-charts"></div>
                        </div>
                    </div>
                    <div class="col-md-6 text-center">
                        <div class="card-box">
                            <h3 class="card-title">Sports</h3>
                            <div id="line-charts"></div>
                        </div>
                    </div>
