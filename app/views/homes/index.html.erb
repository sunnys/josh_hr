<script>
    $(document).ready(function() {
	
	// Area Chart
    Morris.Bar({
		element: 'area-charts',
		data: gon.data,
		xkey: 'y',
		ykeys: 'a',
		labels: ['Total Count', 'Language'],
		lineColors: ['#00c5fb','#0253cc'],
		lineWidth: '3px',
		resize: true,
		redraw: true
    });

	// Bar Chart
	Morris.Bar({
		element: 'bar-charts',
		data: gon.trade_data,
		xkey: 'y',
		ykeys: 'a',
		labels: ['Total Count', 'Trade'],
		lineColors: ['#00c5fb','#0253cc'],
		lineWidth: '3px',
		barColors: ['#00c5fb','#0253cc'],
		resize: true,
		redraw: true
	});
	
	// Line Chart
	
	Morris.Donut({
		element: 'line-charts',
		data: gon.state_data,
		resize: true,
		redraw: true
	});
	
	// Donut Chart
		
	Morris.Donut({
		element: 'pie-charts',
		data: gon.sport_data,
		resize: true,
		redraw: true
	});
		
  });
</script>
